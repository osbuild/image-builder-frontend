{
    "extends": [
        "github>konflux-ci/mintmaker//config/renovate/renovate.json"
    ],
    "schedule": [
        "on Monday after 3am and before 10am"
    ],
    "ignorePaths": [
        ".pre-commit-config.yaml"
    ],
    "packageRules": [
    {
        "description": "Disable all npm dependency updates",
        "matchManagers": ["npm"],
        "enabled": false
    }
    ],
    "lockFileMaintenance": {
        "enabled": false
    }
}
